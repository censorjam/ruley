{
    "debug": true,

    "globals": {
        "type": "rabbitmq"
    },

    "parameters": [
        {
            "type": "RabbitMq",
            "host": "localhost",
            "port": 15672,
            "vhost": "%2f",
            "authentication": {
                "username": "guest",
                "password": "guest"
            }
        },
        {
            "type": "RabbitMq",
            "host": "t1apmon001",
            "port": 15672,
            "vhost": "%2f",
            "authentication": {
                "username": "rabbitadmin",
                "password": "qwe123"
            }
        }
    ],

    "template": {
        "input": {
            "$type": "@interval",
            "period": 5000
        },

        "filters": [
            {
                "$type": "@merge",
                "data": { "url": "http://{host}:{port}/api/aliveness-test/{vhost}" }
            },
            {
                "$type": "@http",
                "url": "{url}",
                "username": "{authentication.username}",
                "password": "{authentication.password}",
                "authentication": "basic",
                "timeout": 5000
            },
            {
                "$type": "@map",
                "value": "[statusCode]",
                "map": [
                    {
                        "key": 200,
                        "value": { "status": "OK", "isHealthy": true }
                    },
                    {
                        "key": null,
                        "value": { "status": "Warn", "isHealthy": false }
                    },
                    {
                        "key": "$default",
                        "value": { "status": "Critical", "isHealthy": false }
                    }
                ]
            },
            {
                "$type": "@distinct",
                "value": "[status]"
            },
            {
                "$type": "@merge",
                "data": {
                    "name": "RabbitMQ ({host})",
                    "type": "rabbitmq",
                    "info": "Status Code: {statusCode}\nUrl: {url}\nException: {exception}"
                }
            },
            {
                "$type": "@map",
                "value": "[isHealthy]",
                "map": [
                    { "key": true, "value": { "emoji": ":rabbit:", "info": null } },
                    { "key": false, "value": { "emoji": ":ambulance:", "info": "error!!" } }
                ]
            },
            {
                "$type": "@slack",
                "webHookUrl": "@slack_url",
                "channel": "#test-alerts",
                "username": "{name}",
                "emoji": "{emoji}",
                "message": "Status is *{status}*{infoMessage}"
            }
        ],

        "outputs": [
            {
                "$type": "@console",
                "enabled": true
            }
        ]
    }
}
